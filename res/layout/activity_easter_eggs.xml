        <RelativeLayout android:id="@id/rl_btns" android:layout_width="fill_parent" android:layout_height="@dimen/egg_right_btns_height">
            <RelativeLayout android:id="@id/rl_btn_test" android:background="@drawable/sel_player_error_page_btn_bg" android:focusable="true" android:clickable="true" android:layout_width="@dimen/egg_right_btns_item_width" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/egg_font_size" android:textColor="#ffffffff" android:gravity="center" android:id="@id/tv_test" android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/egg_btn_test" android:layout_centerInParent="true" />
                <ImageView android:id="@id/iv_test" android:visibility="invisible" android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/egg_right_btns_logo_margin_right" android:src="@drawable/sel_egg_version_bg" android:layout_toLeftOf="@id/tv_test" android:layout_centerVertical="true" android:contentDescription="@null" />
