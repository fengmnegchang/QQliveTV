<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/bg_layout" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/iv_qr_code" android:background="@drawable/transparent" android:layout_width="@dimen/egg_qr_width" android:layout_height="@dimen/egg_qr_height" android:layout_marginLeft="@dimen/egg_qr_margin_left" android:layout_marginTop="@dimen/egg_qr_margin_top" android:contentDescription="@null" />
